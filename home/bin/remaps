#!/bin/sh

# Customizes the keyboard layout

# Use swedish keyboard layout
setxkbmap se

# Remap CapsLock to AltGr
xmodmap -e "keycode 66 = ISO_Level3_Shift"

# But make it act as Escape when pressed once
xcape -e "ISO_Level3_Shift=Escape"

# Increase the keyboard rate
xset r rate 300 100

# Enable numlock
numlockx
