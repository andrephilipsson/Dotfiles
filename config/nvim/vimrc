let mapleader="\<Space>"             " Change leader key to <Space>

let g:netrw_home="~/.cache/nvim/"    " Move annoying files out of the way

let g:python3_host_prog="~/.local/share/nvim/neovim-virtualenv/bin/python"
let g:loaded_python_provider=0	     " Disable python2

let g:deoplete#enable_at_startup = 1 " Use deoplete

if has("nvim")
  " Highlight yanked text
  au TextYankPost * silent! lua vim.highlight.on_yank {on_visual=false, timeout=300}
endif

if &loadplugins
  if has("packages")
    packadd! command-t
    packadd! kotlin-vim
    packadd! pinnacle
    packadd! python-syntax
    packadd! tabular
    packadd! ultisnips
    packadd! vim-fugitive
    packadd! vim-jsx-pretty
    packadd! vim-snippets
    packadd! vim-surround

    if has("nvim")
      packadd! corpus
      packadd! deoplete-lsp
      packadd! deoplete.nvim
      packadd! nvim-lspconfig
    endif
  endif
endif

if has("nvim")
  lua <<
    CorpusDirectories = {
      ['~/Documents/notes'] = {
        autocommit = true,
        autoreference = 1,
        autotitle = 1,
        base = './',
        transform = 'local',
      }
  }
.
endif

filetype indent plugin on	     " Enable ft detection, indentation and load plugin file 
syntax on			                 " Enable syntax highlighting
