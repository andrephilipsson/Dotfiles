[user]
	name = Andr√© Philipsson
	email = andre@andrephilipsson.com

[init]
	defaultBranch = main

[pull]
	ff = only

[pager]
	status = true

[interactive]
	diffFilter = delta --color-only --features=interactive

[log]
	decorate = short

[delta]
	line-numbers = true
	side-by-side = true

[alias]
	ci = commit
	co = checkout
	delta = "!f() { git diff \"$@\" | delta; }; f"
	last = log -1 HEAD
	st = status
	update = pull --rebase origin
	today = !git log --since="00:00" --author=$(git config user.email)

[cipher]
	gpguser = andre@andrephilipsson.com

[commit]
	template = ~/.config/git/gitcommit

[merge]
	conflictStyle = zdiff3

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[push]
	autoSetupRemote = true

